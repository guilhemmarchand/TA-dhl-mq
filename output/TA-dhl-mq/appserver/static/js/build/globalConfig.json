                                "items": [
                                    {
                                        "value": "enabled",
                                        "label": "Enabled"
                                    },
                                    {
                                        "value": "disabled",
                                        "label": "Disabled"
                                    }
                                ],
                                "display": true
                            }
                        }
                    ]
                }
